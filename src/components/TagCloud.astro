---
// TagCloud.astro - Zero-JS tag cloud component
// Displays all unique tags from news collection
interface Props {
  tags: string[];
  title?: string;
}

const { tags, title = "Browse by Topic" } = Astro.props;

// Sort tags alphabetically
const sortedTags = [...tags].sort((a, b) => a.localeCompare(b));
---

<section class="tag-cloud-section">
  <h2 class="tag-cloud-title">{title}</h2>
  <div class="tag-cloud">
    {
      sortedTags.map((tag) => (
        <a href={`/tags/${tag.toLowerCase().replace(/\s+/g, "-")}`} class="tag">
          {tag}
        </a>
      ))
    }
  </div>
</section>

<style>
  .tag-cloud-section {
    margin: var(--space-12) 0;
  }

  .tag-cloud-title {
    font-family: var(--font-serif);
    font-size: var(--text-2xl);
    font-weight: 700;
    margin-bottom: var(--space-4);
    color: var(--text-main);
  }

  .tag-cloud {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
    padding: var(--space-6);
    background-color: var(--bg-secondary);
    border: 1px solid var(--border-color);
  }

  .tag-cloud .tag {
    display: inline-block;
    padding: var(--space-2) var(--space-4);
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    background-color: var(--bg-main);
    color: var(--text-main);
    text-decoration: none;
    border: 1px solid var(--border-color);
    transition: all var(--transition);
  }

  .tag-cloud .tag:hover {
    background-color: var(--accent-color);
    color: var(--bg-main);
    border-color: var(--accent-color);
    transform: translateY(-1px);
    box-shadow: var(--shadow-sm);
  }

  /* Responsive */
  @media (max-width: 640px) {
    .tag-cloud {
      padding: var(--space-4);
    }

    .tag-cloud .tag {
      font-size: var(--text-xs);
      padding: var(--space-1) var(--space-3);
    }
  }
</style>
