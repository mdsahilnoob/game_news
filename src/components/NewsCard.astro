---
// NewsCard.astro - Zero-JS news article card component
// Displays article metadata, title, description, and tags
import type { CollectionEntry } from "astro:content";

interface Props {
  news: CollectionEntry<"news">;
}

const { news } = Astro.props;
const { title, description, pubDate, author, tags } = news.data;

// Format date
const formattedDate = new Date(pubDate).toLocaleDateString("en-US", {
  year: "numeric",
  month: "short",
  day: "numeric",
});
---

<article class="news-card">
  <a href={`/news/${news.id}`} class="news-card-link">
    <div class="news-card-meta">
      <time datetime={pubDate.toISOString()} class="news-card-date">
        {formattedDate}
      </time>
      <span class="news-card-author">{author}</span>
    </div>

    <h3 class="news-card-title">{title}</h3>

    <p class="news-card-description">{description}</p>

    <ul class="news-card-tags">
      {
        tags.map((tag) => (
          <li>
            <a
              href={`/tags/${tag.toLowerCase().replace(/\s+/g, "-")}`}
              class="tag"
              onclick="event.stopPropagation()"
            >
              {tag}
            </a>
          </li>
        ))
      }
    </ul>
  </a>
</article>

<style>
  /* Card wrapper */
  .news-card {
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .news-card-link {
    display: flex;
    flex-direction: column;
    height: 100%;
    background: var(--bg-main);
    border: 1px solid var(--border-color);
    padding: var(--space-6);
    text-decoration: none;
    transition: all var(--transition);
  }

  .news-card-link:hover {
    border-color: var(--border-strong);
    box-shadow: var(--shadow-md);
    transform: translateY(-2px);
  }

  /* Metadata */
  .news-card-meta {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    margin-bottom: var(--space-4);
    flex-wrap: wrap;
  }

  .news-card-date,
  .news-card-author {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .news-card-date::after {
    content: "â€¢";
    margin-left: var(--space-3);
    color: var(--border-color);
  }

  /* Title */
  .news-card-title {
    font-family: var(--font-serif);
    font-size: var(--text-xl);
    font-weight: 700;
    line-height: 1.3;
    margin-bottom: var(--space-3);
    color: var(--text-main);
    transition: color var(--transition);
  }

  .news-card-link:hover .news-card-title {
    color: var(--accent-hover);
  }

  /* Description */
  .news-card-description {
    font-size: var(--text-base);
    line-height: 1.6;
    color: var(--text-secondary);
    margin-bottom: var(--space-4);
    flex-grow: 1;
  }

  /* Tags */
  .news-card-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
    list-style: none;
    margin-top: auto;
  }

  .news-card-tags .tag {
    font-size: var(--text-xs);
    padding: var(--space-1) var(--space-3);
  }

  /* Responsive */
  @media (max-width: 640px) {
    .news-card-link {
      padding: var(--space-4);
    }

    .news-card-title {
      font-size: var(--text-lg);
    }

    .news-card-description {
      font-size: var(--text-sm);
    }
  }
</style>
